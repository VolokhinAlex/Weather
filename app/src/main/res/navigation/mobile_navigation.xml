<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.java.android1.weather.view.main.MainFragment"
        android:label="MainFragment">
        <action
            android:id="@+id/action_mainFragment_to_detailsWeatherFragment"
            app:destination="@id/detailsWeatherFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsWeatherFragment"
        android:name="com.example.java.android1.weather.view.details.DetailsWeatherFragment"
        android:label="DetailsWeatherFragment" >
        <action
            android:id="@+id/action_detailsWeatherFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>